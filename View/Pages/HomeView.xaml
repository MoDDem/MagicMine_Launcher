<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="MagicMine_Launcher.View.Pages.HomeView"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Home view" FontSize="26" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Command="{Binding DataContext.NavigationVM.ChangeVMCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" CommandParameter="{Binding LoginVM}" Content="Open Login View" Grid.Row="1"/>
    </Grid>
</UserControl>
